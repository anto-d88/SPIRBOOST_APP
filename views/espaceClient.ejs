<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

<link href="https://fonts.googleapis.com/css2?family=Nothing+You+Could+Do&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500&family=Montserrat:wght@400;600&family=Lora:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  

    <link rel="stylesheet" href="./navbar.css">
    <link rel="stylesheet" href="./espaceclient.css">
    <link rel="stylesheet" href="./footer.css">
    <title>Bienvenue - Les Bienfaits de la Spiruline</title>
  
</head>
<body>
  <div class="fade-in">
    <div class="fullscreen-image">
      <main>
        <%- include('header') %>
      <section class="boxEspaceClient">
        <section class="box">
          <nav class="nav">
            <ul>
              <li class="navnom"><%= user.last_name %> <%= user.first_name %></li>
              <li><button class="informations">Mes Informations</button></li>
              <li><button class="commandes">Mes Commandes</button</li>
            </ul>
          </nav>
        <section class="boxInfoClient">
          <h1>Informations personnel</h1>
          <div class="infoDisplay">
       <p>NOM: <%= user.last_name %></p>
       <p>PRENOM: <%= user.first_name %></p>
       <p>TELEPHONE: <%= user.phone_number %></p>
       <p>E-MAIL: <%= user.email %></p>
       <p>ADRESSE: <%= user.address %></p>
       <button id="editButton" class="editButton">
        <i class="fas fa-edit editIcon"></i> <!-- Icône de crayon de Font Awesome -->
      </button>
    </div>
  
    <form id="updateForm" action="/espaceClient/update?userId=<%= user.id %>" method="POST" class="formUpdateInfo hidden">
      <label for="last_name">Nom:</label>
      <input type="text" id="last_name" name="last_name" value="<%= user.last_name %>" required>
  
      <label for="first_name">Prénom:</label>
      <input type="text" id="first_name" name="first_name" value="<%= user.first_name %>" required>
  
      <label for="phone_number">Téléphone:</label>
      <input type="text" id="phone_number" name="phone_number" value="<%= user.phone_number %>" required>
  
      <label for="email">E-mail:</label>
      <input type="email" id="email" name="email" value="<%= user.email %>" required>
  
      <label for="address">Adresse:</label>
      <textarea id="address" name="address" required><%= user.address %></textarea>
  
      <button type="submit" class="btnUpdateInfo">Mettre à jour</button>
      <button type="button" id="cancelButton" class="btnCancel">Annuler</button> <!-- Bouton annuler -->
    </form>
      </section>

      <section class="boxCommandes">
<p>mes commandes</p>
<table border="1">
  <thead>
      <tr>
          <th>Produit</th>
          <th>Quantité</th>
          <th>Prix</th>
          <th>Date de la commande</th>
      </tr>
  </thead>
  <tbody>
    <% ordersItems.forEach(item => { %>
    <tr>
      <td data-label="Produit"><%= item.product %></td>
      <td data-label="Quantité"><%= item.quantity %></td>
      <td data-label="Prix"><%= item.amount_euros + item.fraisDePort %></td>
      <td data-label="Date de la commande"><%= item.order_date %></td>
    </tr>
    <% }); %>
  </tbody>
</table>
      </section>
    </section>
</section>

</main>
    </div></div>
    <footer>
    </footer>
  <script src="./scripespaceclient.js"></script>
</body>
</html>
